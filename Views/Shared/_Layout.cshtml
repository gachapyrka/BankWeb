@using BankWeb.Controllers;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BankWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="wrapper">
        <header class="border-bottom box-shadow bg_white">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" style="visibility:hidden">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                                 <a class="nav-link text-dark" asp-area="" style="align-content:end;" asp-controller="Authorization" asp-action="SingOut">Выход</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-area="" style="align-content:end;" asp-controller="Authorization" asp-action="Index">Вход</a>
                            <a class="nav-link text-dark" asp-area="" style="align-content:end;" asp-controller="Authorization" asp-action="Registration">Регистрация</a>
                        }
                </div>
            </div>
        </nav>
    </header>
    <main role="main">
            @RenderBody()
    </main>

    <footer class="border-top footer text-muted bg_white">
        <div style="margin-left:10px">
            &copy; 2023 - ОАО "ЛиквидБанкинг" - Все права защищены лицензионным соглашением.
        </div>
    </footer>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

<script>
$(document).ready(function(){
      let analyzeUrl = "@Html.Raw(Url.Action(nameof(AnalyzeController.AnalyzePartitial), "Analyze"))";
              $('#Analyze').on('click', function() {
                  $.ajax({
                      type: 'GET',
                      url: analyzeUrl,
                      contentType: 'application/json',
                      dataType: 'html',
                      cache: false,
                      async: true
                  }).done(function (data) {
                      $("#partitialPlasement").html(data);
                  });
              })
       let inputUrl = "@Html.Raw(Url.Action(nameof(AnalyzeController.InputPartitial), "Analyze"))";
              $('#Input').on('click', function() {
                  $.ajax({
                      type: 'GET',
                      url: inputUrl,
                      contentType: 'application/json',
                      dataType: 'html',
                      cache: false,
                      async: true
                  }).done(function (data) {
                      $("#partitialPlasement").html(data);
                  });
              })
       let addUrl = "@Html.Raw(Url.Action(nameof(AnalyzeController.AddPartitial), "Analyze"))";
              $('#Add').on('click', function() {
                  $.ajax({
                      type: 'GET',
                      url: addUrl,
                      contentType: 'application/json',
                      dataType: 'html',
                      cache: false,
                      async: true
                  }).done(function (data) {
                      $("#partitialPlasement").html(data);
                  });
              })
      let helpUrl = "@Html.Raw(Url.Action(nameof(AnalyzeController.HelpPartitial), "Analyze"))";
              $('#Help').on('click', function() {
                  $.ajax({
                      type: 'GET',
                      url: helpUrl,
                      contentType: 'application/json',
                      dataType: 'html',
                      cache: false,
                      async: true
                  }).done(function (data) {
                      $("#partitialPlasement").html(data);
                  });
              })
    });
</script>
