@{
    ViewData["Title"] = "Регистрация";
}

<form method="post" class="bg_white main_form" action="">
    <p class="bold_font" style="font-size:32px">Регистрация</p>
    <input type="email" class="input margin bold_font" placeholder="Логин..." required autocomplete="off" name="login" />
    <br/>
    <input type="password" class="input margin bold_font" placeholder="Пароль..." required name="password"/>
    <br/>
    <input type="password" class="input margin bold_font" placeholder="Повторите пароль..." required name="repeatPassword"/>
    <br/>
    <input type="submit" class="button bold_font" style="margin-top:10px;" value="Вход" />
    <br/>
</form>
